{
  "name": "nest_typeorm_boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "check": "ts-patch check",
    "prepare": "ts-patch install",
    "prebuild": "rimraf dist",
    "postbuild": "npx nestia swagger",
    "build": "nest build",
    "swagger": "npx nestia swagger",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:pm2": "pm2 start ecosystem.config.js",
    "reload:pm2": "pm2 reload ecosystem.config.js",
    "kill:pm2": "pm2 kill",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose --runInBand",
    "test:e2e": "jest --verbose --runInBand \"--testPathPattern='.+\\.controller\\.spec\\.ts$'\"",
    "test:watch": "jest  --verbose --runInBand --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- ./src/common/database/migrations/migration -d data-source.ts",
    "migration:run": "npm run typeorm migration:run --  -d data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d data-source.ts",
    "database:seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run"
  },
  "dependencies": {
    "@nestia/core": "^1.4.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "nestjs-pino": "^3.3.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.1",
    "pino-pretty": "^10.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.0.1",
    "typia": "^4.1.7"
  },
  "devDependencies": {
    "@nestia/e2e": "^0.3.6",
    "@nestia/sdk": "^1.4.12",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nestia": "^4.3.2",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@src(.*)$": "<rootDir>/src$1",
      "^@root(.*)$": "<rootDir>$1"
    }
  }
}
